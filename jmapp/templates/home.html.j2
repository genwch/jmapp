{% extends "base/main.html.j2" %} 
{% block title %} 
JobMatch
{% endblock %} 

{% block links %}
{{super()}}
<link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet">    
{% endblock %}
{% block scripts %}
{{super()}}
<script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="static/js/scroll_anchor.js"></script>
{% endblock %}

{% block content %}
<div class="section" id="section-main">
  <a name="main">
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col-auto align-self-center">
          <h1 class="display-4">Who are you?</h1>
        </div>
      </div>
      <div class="row align-items-center justify-content-center">
        <div class="col-auto align-self-center">
          <div
            class="btn-group btn-group-lg"
            role="group"
            aria-label="section-btn-grp"
          >
            <button
              type="button"
              class="btn btn-secondary anchor_btn"
              id="btn-section-jh"
            >
              Job Hirer
            </button>
            <button
              type="button"
              class="btn btn-secondary anchor_btn"
              id="btn-section-js"
            >
              Job Seeker
            </button>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
<div class="section" id="section-jh">
  <a name="jh">
    <h1 class="display-4">Job Hirer</h1>
    <div class="container">
      <div class="row">
        <div class="col">
          <img class="section-img" src="static/img/hirer.png" />
        </div>
        <div class="col">
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="card">
                  <h5 class="card-header">Post job</h5>
                  <div class="card-body">
                    <h5 class="card-title">Post job</h5>
                    <p class="card-text">
                      Post a new job
                    </p>
                    {% if session['access_token'] %}
                    <a href="/job/view?edit=1" class="btn btn-primary">New Job</a>
                    {% else %}
                    <a href="/job" class="btn btn-primary">Job</a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="card">
                  <h5 class="card-header">Describe yourself</h5>
                  <div class="card-body">
                    <h5 class="card-title">Describe</h5>
                    <p class="card-text">
                      Update description
                    </p>
                    <a href="/profile" class="btn btn-primary">Profile</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
<div class="section" id="section-js">
  <a name="js">
    <h1 class="display-4">Job Seeker</h1>
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="card">
                  <h5 class="card-header">Add profile</h5>
                  <div class="card-body">
                    <h5 class="card-title">Add profile</h5>
                    <p class="card-text">
                      Add profile
                    </p>
                    <a href="/profile" class="btn btn-primary">Profile</a>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="card">
                  <h5 class="card-header">Find job</h5>
                  <div class="card-body">
                    <h5 class="card-title">Find job</h5>
                    <p class="card-text">
                      Find job
                    </p>
                    <a href="/job" class="btn btn-primary">Job</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col">
          <img class="section-img" src="static/img/seeker.png" />
        </div>
      </div>
    </div>
  </a>
</div>
{{super()}}
{% endblock %}
